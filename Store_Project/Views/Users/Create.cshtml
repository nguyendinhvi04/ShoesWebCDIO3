@model Store_Project.Models.User

@{
    ViewData["Title"] = "Create";
}
<style>
    h1 {
        color: #D10024;
    }

    btn-primary{
        background-color: #D10024;
        color: white;
    }
</style>
<h1>Thêm Tài Khoản Cho Admin</h1>

<h4>Tài Khoản</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label text="Tên Đăng Nhập" class="control-label">Tên Tài Khoản</label>
                <input asp-for="Name" class="form-control" width="300px"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label text="Email Người Dùng" class="control-label">Email Đăng Nhập</label>
                <input asp-for="Email" class="form-control" width="300px" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label text="Mật Khẩu"class="control-label">Mật Khẩu</label>
                <input asp-for="Password" class="form-control" width="300px" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label  class="control-label">Vai Trò</label>
                <input asp-for="Role" class="form-control" width="300px" />
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo Mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" color="#D10024">Trở về Trang Chủ</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
