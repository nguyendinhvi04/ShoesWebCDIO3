@model IEnumerable<Store_Project.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "_Products2";
}
<!--San Pham Hien Thi--> 
<div class="row">				
    @foreach(var item in Model){	
	<div class="col-md-3 col-xs-3">
		<div class="product">
			<div class="product-img">
				<img src="@item.ImageUrl" alt="">
				<div class="product-label">
					<span class="sale">-20%</span>
					<span class="new">Mới</span>
				</div>
			</div>
			<div class="product-body">
				<p class="product-category">@item.Category.Name</p>
					<h3 class="product-name">

						<a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
					</h3>
				<h4 class="product-price">@item.Price<del class="product-old-price">Đang Giảm</del></h4>
				<div class="product-rating">
					<i class="fa fa-star"></i>
					<i class="fa fa-star"></i>
					<i class="fa fa-star"></i>
					<i class="fa fa-star"></i>
					<i class="fa fa-star"></i>
				</div>
				<div class="product-btns">
					<button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">Yêu Thích</span></button>
						<button class="quick-view"><i class="fa fa-eye"></i><a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id" class="tooltipp">Chi Tiết</a></button>
				</div>
			</div>
			<div class="add-to-cart">
					<button class="add-to-cart-btn"><a href="/Order/PlaceOrder">Đặt Hàng</a></button>
			</div>
		</div>
	</div>
	
    }
</div>
